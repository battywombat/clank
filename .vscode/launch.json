    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "drain",
            "cargo": {
                "args": [
                    "build",
                    "--bin=drain",
                    "--package=clank"
                ],
                "filter": {
                    "name": "drain",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "VULKAN_SDK": "/Users/pwarner/vulkansdk-macos-1.1.114.0/macOS",
                "PATH": "/Users/pwarner/vulkansdk-macos-1.1.114.0/macOS/bin:$PATH",
                "DYLD_LIBRARY_PATH": "/Users/pwarner/vulkansdk-macos-1.1.114.0/macOS/lib:$DYLD_LIBRARY_PATH",
                "VK_ICD_FILENAMES": "/Users/pwarner/vulkansdk-macos-1.1.114.0/macOS/etc/vulkan/icd.d/MoltenVK_icd.json",
                "VK_LAYER_PATH": "/Users/pwarner/vulkansdk-macos-1.1.114.0/macOS/etc/vulkan/explicit_layer.d"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Lua Test",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/luatest",
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {"RUST_BACKTRACE": "1"},
            "preLaunchTask": {
                "type": "cargo",
                "subcommand": "build"
            }
        }
    ]
}