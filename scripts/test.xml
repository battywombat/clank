<Scriptable>
    <version>0</version>
    <fields>
        <Int name="xyz">0</Int>
    </fields>
    <update>
self.xyz = self.xyz +  1
    </update>
    <handlers>
        <ButtonPressed>
            print("Button pressed: ", event.button)
        </ButtonPressed>
        <ButtonReleased>
            print("Button released: ", event.button)
        </ButtonReleased>
    </handlers>
</Scriptable>